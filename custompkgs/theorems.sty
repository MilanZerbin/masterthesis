\ProvidesPackage{custompkgs/theorems}

%% Theorems
% blueprintstlyle
\newtheoremstyle{thesisblueprintstyle}% name of the style to be used
  {0pt}% measure of space to leave above the theorem. E.g.: 3pt
  {0pt}% measure of space to leave below the theorem. E.g.: 3pt
  {\upshape\color{themecolordark}}% name of font to use in the body of the theorem
  {0pt}% measure of space to indent
  {\bfseries}% name of head font
  {}% punctuation between head and body
  { }% space after theorem head; " " = normal interword space
  {\color{\themecolordark}\thmname{#1}\thmnumber{ #2}\textnormal{\thmnote{ (\textit{#3})}}}

\theoremstyle{thesisblueprintstyle}

% environment for the theorem blueprint
\mdfsetup{skipbelow=0}
\mdtheorem[%
roundcorner=3pt,
outerlinewidth=2,%
leftmargin=0,%
rightmargin=0,%
skipbelow=.4\baselineskip,%
skipabove=.4\baselineskip,%
linecolor=themecolordark,%
linewidth=1pt,%
ntheorem=true%
]{blueprint}{Blueprint for theorems}

% theoremstyle
\newtheoremstyle{thesistheoremstyle}% name of the style to be used
